<?xml version="1.0"?>
<launch>
    <param name="maxlen"          value="100.0" />
    <param name="minlen"          value="0.01" />
    <param name="max_ang_FOV"     value="3.0" />
    <param name="min_ang_FOV"     value="0.4" />
    <param name="pcTopic"         value="/velodyne_points" />
    <param name="imgTopic"        value="/usb_cam/image_raw" />
    <param name="x_resolution"    value="0.5" />
    <param name="y_interpolation" value="30.0" />
    <param name="ang_Y_resolution" value="1.0" />
    <param name="max_var"         value="100.0" />
    <param name="filter_output_pc" value="true" />

    <group ns="matrix_file">
        <rosparam file="$(find lidar_camera_fusion)/cfg/cfg_params.yaml" />
    </group>
    
    <node pkg="lidar_camera_fusion" type="lidar_camera_node" name="lidar_camera_node" output="screen"/>

<!-- velodyne -->
    <include file="$(find velodyne_pointcloud)/launch/VLP16_points.launch" />

<!-- camera -->

<!-- rviz
<node type="rviz" name="rviz" pkg="rviz" args="-d $(find lidar_camera_fusion)/rviz/lidar_camera.rviz" />-->
</launch>
